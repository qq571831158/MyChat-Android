<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">
    <ImageView
        android:id="@+id/layout_chattingcellfromwho_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="6dp"
        />
    <TextView
        android:id="@+id/layout_chattingcellfromwho_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chatfrom_bg_normal"
        android:text="啊实打实大交换"
        android:textSize="14sp"
        android:padding="10dp"
        android:layout_toRightOf="@id/layout_chattingcellfromwho_image"
        android:layout_alignTop="@+id/layout_chattingcellfromwho_image"
        />
</RelativeLayout>
