<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <RelativeLayout
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">
        <ImageView
            android:id="@+id/layout_detailinfo_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp" />

        <TextView
            android:id="@+id/layout_detailinfo_beizhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@id/layout_detailinfo_image"
            android:layout_marginStart="22dp"
            android:textSize="16sp"
            android:textColor="@color/blackText"
            />

        <TextView
            android:id="@+id/layout_detailinfo_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_detailinfo_beizhu"
            android:layout_marginTop="6dp"
            android:layout_alignStart="@+id/layout_detailinfo_beizhu"
            android:textSize="12sp"
            android:textColor="#808181"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@id/relativeLayout"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="设置备注和标签"
            android:textColor="@color/blackText"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@id/line1"
        android:layout_marginTop="20dp"
        android:id="@+id/line2"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="更多"
            android:textColor="@color/blackText"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:id="@+id/line3"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/layout_detailinfo_sendBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#21961b"
            android:text="发消息"
            android:textColor="#FFF"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line3"
        android:id="@+id/line4"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/layout_detailinfo_videoChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ebebeb"
            android:text="视频聊天"
            android:textColor="@color/blackText"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            />
    </LinearLayout>
</RelativeLayout>
